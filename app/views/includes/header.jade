.container
  .row
    .page-herder.clearfix
      h1 #{title}
      .col-md-4
        small 重度科幻迷
      .col-md-8
        form(method='GET', action='/results')
          .input-group.col-sm-4.pull-right
            input.form-control(type='text', name='q')
            span.input-group-btn
              button.btn.btn-default(type='submit') 搜索
nav.navbar.navbar-default
  .container
    .navbar-header
      a.navbar-brand(href="/") 科幻迷
    if user
      p.navbar-text.navbar-right
        span 欢迎您,#{user.name}
        span &nbsp;|&nbsp;
        a.navbar-link(href="/logout") 登出
    else
      p.navbar-text.navbar-right
        a.navbar-link(href="#",data-toggle="modal",data-target="#signupModal") 注册
        span &nbsp;|&nbsp;
        a.navbar-link(href="#",data-toggle="modal",data-target="#signinModal") 登录
#signupModal.fade.modal
  .modal-dialog
    .modal-content
      form(method="POST",action="/user/signup")
        .modal-header 注册
        .modal-body
          .form-group
            label(for="signupName") 用户名
            input#signupName.form-control(type="text",name="user[name]")
          .form-group
            label(for="signupPassword") 密码
            input#signupPassword.form-control(type="text",name="user[password]")
        .modal-footer
          button.btn.btn-default(type="button",data-dismiss="modal") Close
          button.btn.btn-primary(type="submit") Save
#signinModal.fade.modal
  .modal-dialog
    .modal-content
      form(method="POST",action="/user/signin")
        .modal-header 登录
        .modal-body
          .form-group
            label(for="signupName") 用户名
            input#signinName.form-control(type="text",name="user[name]")
          .form-group
            label(for="signupPassword") 密码
            input#signinPassword.form-control(type="text",name="user[password]")
        .modal-footer
          button.btn.btn-default(type="button",data-dismiss="modal") Close
          button.btn.btn-primary(type="submit") Save