extends ../layout

block content
  .container
    .row
        .panel.panel-primary
          .panel-heading
            h3 #{keyword}
          .panel-body
            if movies && movies.length >0
              each item in movies
                .col-md-2
                  .thumbnail
                    a(href="/movie/#{item._id}")
                      img(src='#{item.poster}',alt='#{item.title}')
                    .caption
                      h3 #{item.title}
                      p: a.bit.bit-primary(href='/movie/#{item._id}',role='button') 观看预告片
        ul.pagination
          li
            a(aria-label= "Previous")
              span(aria-hidden = "true") &laquo;
          - for (let i = 0; i < totalPage; i++) {
            - if (currentPage == (i + 1)) {
                li.active
                  span #{currentPage}
            - }
            - else {
                li
                  a(href='/results?#{query}&p=#{i}') #{i + 1}
            - }
          - }
          li
            a(aria-label= "Previous")
              span(aria-hidden = "true") &laquo;